   <script type="text/javascript">
      function login1()
      {
      
      
      
      var a=document.getElementById("judge1").value;
      
      var b=document.getElementById("judge2").value;
      
      var c=document.getElementById("judge3").value;
      
      var d=document.getElementById("judge4").value;
      
      var e=document.getElementById("judge5").value;
      
      var num=[+a,+b,+c,+d,+e];
      
      const arrMax=Math.max.apply(null,num);
      const arrMin=Math.min.apply(null,num);
      var sum1=(((+a)+(+b)+(+c)+(+d)+(+e))-arrMin-arrMax);
      
       document.getElementById("tot1").value=sum1.toFixed(2);
      var fac1=(+sum1*0.7);
      document.getElementById("res1").value=fac1.toFixed(2);
      
      
      var a1=document.getElementById("ajudge1").value;
      
      var a2=document.getElementById("ajudge2").value;
      
      var a3=document.getElementById("ajudge3").value;
      
      var a4=document.getElementById("ajudge4").value;
      
      var a5=document.getElementById("ajudge5").value;
      
      var num1=[+a1,+a2,+a3,+a4,+a5];
      const arrMax1=Math.max.apply(null,num1);
      const arrMin1=Math.min.apply(null,num1);
      var sum2=((+a1)+(+a2)+(+a3)+(+a4)+(+a5))-arrMin1-arrMax1;
      
      document.getElementById("tot2").value=sum2.toFixed(2);
      var fac2=(+sum2*0.3);
      
      var Tot=(+fac1)+(+fac2);
      document.getElementById("Total").value=Tot.toFixed(2);
      document.getElementById("res2").value=fac2.toFixed(2);
      //alert(Tot);
      }
      function check(){
      
      
      
      var a=document.getElementById("judge1").value;
      
      var b=document.getElementById("judge2").value;
      
      var c=document.getElementById("judge3").value;
      
      var d=document.getElementById("judge4").value;
      
      var e=document.getElementById("judge5").value;
      
      var num=[+a,+b,+c,+d,+e];
      
      const arrMax=Math.max.apply(null,num);
      const arrMin=Math.min.apply(null,num);
      var sum1=(((+a)+(+b)+(+c)+(+d)+(+e))-arrMin-arrMax);
      
       document.getElementById("tot1").value=sum1.toFixed(2);
      var fac1=(+sum1*0.7);
      document.getElementById("res1").value=fac1.toFixed(2);
      
      
      var a1=document.getElementById("ajudge1").value;
      
      var a2=document.getElementById("ajudge2").value;
      
      var a3=document.getElementById("ajudge3").value;
      
      var a4=document.getElementById("ajudge4").value;
      
      var a5=document.getElementById("ajudge5").value;
      
      var num1=[+a1,+a2,+a3,+a4,+a5];
      const arrMax1=Math.max.apply(null,num1);
      const arrMin1=Math.min.apply(null,num1);
      var sum2=((+a1)+(+a2)+(+a3)+(+a4)+(+a5))-arrMin1-arrMax1;
      
      document.getElementById("tot2").value=sum2.toFixed(2);
      var fac2=(+sum2*0.3);
      
      var Tot=(+fac1)+(+fac2);
      document.getElementById("Total").value=Tot.toFixed(2);
      document.getElementById("res2").value=fac2.toFixed(2);
      var force=document.write("<body style='font-size:500px;width:400px;text-align:center;margin:90px;background-color:0AAEF6;'><div align:center>&nbsp;&nbsp;"+Tot.toFixed(2)+"</div></body>");
      }
      
      function clear(){
      document.getElementById("clear").reset();
      }
      
      function autotab(current,to){
      
      	String.prototype.splice = function(idx, rem, str) {
         return this.slice(0, idx) + str + this.slice(idx + Math.abs(rem));
      };
      
         if (current.getAttribute && 
           current.value.length==current.getAttribute("maxlength")) {
           	document.getElementById(current.id).value=current.value.splice(1, 0, ".");
             to.focus() 
             }
      }
      
      function autoclick(current)
      { if (current.getAttribute && 
           current.value.length==current.getAttribute("maxlength")) {
           	document.getElementById(current.id).value=current.value.splice(1, 0, ".");
            document.getElementById("click").click();
             }
      
      }
